<h2>User info</h2>


<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
	    <div id="error_explanation">
		    <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
		    <ul>
			    <% @user.errors.full_messages.each do |message| %>
			    	<li><%= message %></li>
			    <% end %>
		    </ul>
		    </div>
    <% end %>
	
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %><br>
	<%= f.label :profile_image, "Image" %>
	<%= f.attachment_field :profile_image %>
	<%= f.label :introduction, "Introduction" %>
	<%= f.text_area :introduction %><br>
	<%= f.submit 'Update User' %>

<% end %>