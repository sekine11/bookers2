<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
<%= @user.name %>
<%= @user.introduction %>

<%= link_to "Edit", edit_user_path(current_user.id) %>

<h2>New Book</h2>

<%= form_for(@book) do |f| %>
  
  	<div class="field">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :body, "Opinion" %>
		<%= f.text_area :body %>
	</div>

	<%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>

<% @books.each do |book| %>
	<% if book.user_id == current_user.id %>
		<%= book.title %> <br>
		<%= book.body %>
	<% end %>
<% end %>