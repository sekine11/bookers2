<div class='row'>
<div class='col-xs-3'>
<h2>User info</h2>
<table class='table'>
<tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %></tr>
<tr>
<th>name</th>
<th><%= @user.name %></th>
</tr>
<tr>
<th>introduction</th>
<th><%= @user.introduction %></th>
</tr>
</table>
<div class='row'>
<%= link_to "Edit", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>

<h2>New book</h2>
<%= form_for(@new_book) do |f| %>
<div class="field row">
<%= f.label :title, "Title" %>
<%= f.text_field :title, class: "col-xs-12" %>
</div>
<div class="field row">
<%= f.label :body, "Opinion" %>
<%= f.text_area :body, class: "col-xs-12" %>
</div>
<div class="actions row">
<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
</div>
<% end %>
</div>

<div class='col-xs-9'>
<h2>Book detail</h2>
<table class='table'>
<tr>
<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><%= link_to user_path(@user) do %><p><%= @user.name %></p><% end %></td>
<td><%= @book.title %></td>
<td><%= @book.body %></td>
<% if @book.user_id == current_user.id %>
<td><%= link_to "Edit", edit_book_path(@book) %></td>
<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
<% end %>
</tr>
</table>
</div>
</div>
</div>
</div>