<% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

<div class='row'>
<div class='col-md-6 col-md-offset-3'>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

	<div class="field row">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title, class: "col-xs-12" %>
	</div>

	<div class="field row">
		<%= f.label :body, "Opinion" %>
		<%= f.text_area :body, class: "col-xs-12" %>
	</div>
	
	<div class="actions row">
		<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
	</div>

<% end %>
<div class="links">
	<span><%= link_to "Show", book_path(@book) %></span>
	<span>|</span>
	<span><%= link_to "Back", books_path %></span>
</div>
</div>
<div class='col-md-3'></div>
</div>
</div>
</div>